<script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script>
    $(document).ready(function(){
        $('.add').click(function(){

            $.get('/check',{},function(check){
                if(check == 'undefined'){
                    console.log('fail');
                    alert("login first");
                }
                else{
                    console.log(check);
                    $.post('/atc',{id:<%= id%>,email:check},function(){
                        alert("product added to cart");
                        console.log(<%= id%>);
                    });
                }
            });
        }) ;
    });
</script>